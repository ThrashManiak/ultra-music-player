<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.bmustapha.ultramediaplayer.activities.PlayListSongs">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/current_album_art"
            android:background="@drawable/default_art"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.8"
                android:background="@color/ColorAccent"/>

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@android:color/transparent"
                android:theme="@style/ThemeOverlay.AppCompat.Dark"/>

            <SeekBar
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

        <ListView
            android:padding="10dp"
            android:divider="@color/ColorDivider"
            android:dividerHeight="1dp"
            android:background="@color/ColorPrimaryDark"
            android:id="@+id/full_playlist_song_list_view"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/play_all_songs"
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        app:backgroundTint="@color/ColorPrimary"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_play_white"
        app:borderWidth="0dp"
        android:layout_gravity="center_vertical|end"/>


</FrameLayout>
