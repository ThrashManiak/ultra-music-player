<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="Playback">

        <SwitchPreference
            android:title="Shuffle"
            android:summary="Play random songs on playback?"
            android:key="playbackShuffle"
            android:defaultValue="false" />

        <SwitchPreference
            android:title="Repeat"
            android:summary="Repeat current playing song."
            android:key="playbackRepeat"
            android:defaultValue="false" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="Display">

        <ListPreference
            android:key="playListDisplayMode"
            android:title="Playlist Display Mode (List or Grid)"
            android:summary="%s"
            android:dialogTitle="Playlists Display Mode"
            android:entries="@array/displayArray"
            android:entryValues="@array/displayArray"
            android:defaultValue="List" />

        <ListPreference
            android:key="albumDisplayMode"
            android:title="Album Display Mode (List or Grid)"
            android:summary="%s"
            android:dialogTitle="Playlists Display Mode"
            android:entries="@array/displayArray"
            android:entryValues="@array/displayArray"
            android:defaultValue="List" />

        <SwitchPreference
            android:title="All Songs Album Art"
            android:summary="Display Album Art for All Songs."
            android:key="allSongsAlbumArt"
            android:defaultValue="true" />

        <SwitchPreference
            android:title="Favourites Album Art"
            android:summary="Display Album Art for Favourites."
            android:key="favouritesAlbumArt"
            android:defaultValue="true" />


    </PreferenceCategory>

</PreferenceScreen>